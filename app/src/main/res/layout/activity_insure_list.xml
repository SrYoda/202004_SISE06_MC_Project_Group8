<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sise.tecnico.mc.project.insureapp.InsureList"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_alignParentLeft="true">

        <TextView
            android:text="@string/my_claims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_claims_title"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ListView
            android:id="@+id/list_claims_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/list_claims_btn_new_note"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_claim_btn_new_claim" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>